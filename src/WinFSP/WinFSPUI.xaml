<UserControl:MetroWindow
	xmlns:UserControl="http://metro.mahapps.com/winfx/xaml/controls" x:Class="KS2Drive.WinFSP.WinFSPUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KS2Drive.WinFSP"
        mc:Ignorable="d" TitlebarHeight="0"
        Height="155" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" WindowStyle="None">
	<StackPanel>
		<RichTextBox Padding="10" IsReadOnly="True" IsDocumentEnabled="True" BorderThickness="0">
			<FlowDocument>
				<Paragraph TextAlignment="Center" FontSize="16">
					KS² Drive
				</Paragraph>
				<Paragraph TextAlignment="Center" FontSize="12">
					Failed to start WinFSP Service. Please ensure you have installed version 2017.2
				</Paragraph>
				<Paragraph TextAlignment="Center"  FontSize="12">
					<Hyperlink NavigateUri="https://github.com/billziss-gh/winfsp/releases/download/v1.2POST1/winfsp-1.2.17346.msi" RequestNavigate="Hyperlink_RequestNavigate">Click here to download</Hyperlink>
				</Paragraph>
			</FlowDocument>
		</RichTextBox>

		<Button Content="Close" Margin="10" Click="Button_Click"></Button>
	</StackPanel>
</UserControl:MetroWindow>
